<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/btnAdd"
        android:onClick="addProduct"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_add_24"
        android:drawablePadding="8dp"
        android:text="Add a new car"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:background="@drawable/my_button_background"
        android:padding="12dp"
        android:gravity="center_vertical"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           >
           <TextView
               android:layout_weight="1"
               android:id="@+id/btnUpdate"
               android:onClick="updateProduct"
               android:layout_margin="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:drawableStart="@drawable/ic_baseline_update_24"
               android:drawablePadding="10dp"
               android:text="Update"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:textColor="#FFFFFF"
               android:background="@drawable/green_background"
               android:padding="12dp"
               android:gravity="center_vertical"/>

           <TextView
               android:layout_weight="1"
               android:id="@+id/btnDelete"
               android:onClick="deleteProduct"
               android:layout_margin="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:drawableStart="@drawable/ic_baseline_restore_from_trash_24"
               android:drawablePadding="8dp"
               android:text="Delete"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:textColor="#FFFFFF"
               android:background="@drawable/red_background"
               android:padding="12dp"
               android:gravity="center_vertical"/>
       </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car list:"
        android:padding="20dp"
        android:paddingTop="0dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TableLayout
        android:id="@+id/my_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#EEEEEE"
        android:stretchColumns="*">
    </TableLayout>



</LinearLayout>